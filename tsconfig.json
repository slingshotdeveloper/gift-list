{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/**/*.tsx", "src/**/*.css", "./.eslintrc.json"],
  "exclude": ["node_modules"]
}